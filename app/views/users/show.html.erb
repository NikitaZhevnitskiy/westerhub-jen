<h2>Profile: <%= @user.first_name + " " + @user.last_name %></h2>

<div class="panel panel-info">

  <div class="panel-heading">
    <h3 class="panel-title">Name</h3>
  </div>
  <div class="panel-body">
      <%= @user.first_name %> <%= @user.last_name %>
  </div>


  <div class="panel-heading">
    <h3 class="panel-title">About</h3>
  </div>
  <div class="panel-body">
    <%= @user.about %>
  </div>

  <div class="panel-heading">
    <h3 class="panel-title">Skills</h3>
  </div>
  <div class="panel-body">
    <%= @user.skills %>
  </div>


  <div class="panel-heading">
    <h3 class="panel-title">Areas of expertise</h3>
  </div>
  <div class="panel-body">
    <% @user.tags.each do |tag| %>
        <p class="department" id="department<%= tag.cssName %>"><%= tag.name %></p>
    <% end %>
  </div>


  <div class="panel-heading">
    <h3 class="panel-title">Contact</h3>
  </div>
  <div class="panel-body">
    <%= @user.email %>
  </div>

  <div class="panel-heading">
    <h3 class="panel-title">Image</h3>
  </div>
  <% if @user.image.thumb.url!=nil %>
    <div class="panel-body">
      <%= image_tag @user.image.thumb.url, :class => "global-img-round-edges" %>
    </div>
  <% end %>

</div>

<% if user_signed_in? %>
    <% if @user.id == current_user.id %>
        <%= link_to 'Edit profile', edit_user_registration_path, class:"btn btn-primary" %>
        <%= link_to 'Destroy', current_user, class:"btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
<% end %>
